<body class="home page students">
  <!-- Begin Main Wrapper -->
  <div class="main-wrapper">

    <!-- Begin Content -->
    <div class="container">

      <!-- Begin Title Content -->
      <div class="page-title">
        <h2>Every Story Has Heroes</h2>
        <h3>We're 29 people on a journey to learn to love code.</h3>
      </div>
      <!-- End Title Content -->

      <!-- Begin Student Index -->
      <div id="random-full-width-content" class="this-div-is-just-a-helpful-container">
        <div class="section section-services student-index">
          <div class="section-title">
            <span>Flatiron School Class 007</span>
          </div>
        </div>

        <a href="/students/new">Add a New Student</a>

        <div class="section section-blog">
          <div class="home-blog clearfix">
            <ul>
              <!-- Begin Students -->
              <% @students.each do |s| %>
              <li class="home-blog-post" id="<%= s.id %>">
                <div class="blog-thumb">
                  <a href=<%= "students/#{s.slug}" %>>
                    <img width="304" height="304" class="prof-image" src=<%= s.profile_image %> class="attachment-blog-thumb wp-post-image" alt=<%= s.name %>>
                  </a>
                </div>

                <div class="blog-title">
                  <div class="big-comment">
                    <h3>
                      <a href=<%= "students/#{s.slug}" %>><%= s.name %></a>
                    </h3>
                  </div>
                  <p class="home-blog-post-meta"><%= s.quote %></p>
                </div>
                <div class="clear"></div>
              </li>
              <% end %>
              <!-- End Students -->
            </ul>
          </div>
        </div>
      </div>
    <div class="clear"></div>
    <!-- End Content -->
  </div>
  <!-- End Main Wrapper -->

  <!-- Begin Footer -->
  <div class="footer">
    <div class="footer-text">
      <div class="footer-text-right">
        <div class="copyright">no&copy; 2016. Artem Eremin. Free.</div>
      </div>
      <div class="clear"></div>
    </div>
  </div>
